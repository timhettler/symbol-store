{
  "name": "@repo/symbol-store",
  "description": "Combine SVGs into a single file with Symbol definitions",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:code": "tsc",
    "build:permissions": "chmod +x ./dist/bin/*",
    "check-types": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier . --write",
    "test": "mocha",
    "test:output": "./dist/bin/create.js -i ./__test__/icons -o ./__test__/out",
    "prepare": "husky"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "symbol-store": "./dist/bin/create.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/cheerio": "^0.22.35",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.6",
    "assert": "^2.1.0",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "mocha": "^11.0.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "dependencies": {
    "cheerio": "^1.0.0",
    "commander": "^13.0.0",
    "svgo": "^3.3.2"
  },
  "peerDependencies": {
    "react": "*"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "tsc --skipLibCheck --noEmit"
    ],
    "**/*": "prettier --write --ignore-unknown"
  }
}
